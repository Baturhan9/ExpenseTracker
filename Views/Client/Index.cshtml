@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = "Welcome to expensetracker app";
}

<h1>@Localizer["Welcome"]</h1>

<form method="post">
    <div>
        <div class="panel">
            <label>@Localizer["Login"]</label>
            <input name="clientLogin"/>
        </div>

        <div class="panel">
            <label>@Localizer["Password"]</label>
            <input name="clientPassword"/>
        </div>

        <div>
            <button class="btn btn-primary btn-lg" type="submit">@Localizer["Enter"]</button>
        </div>
        <div>
            <span>@ViewBag.EmptyFields</span>
            <span>@ViewBag.NotFound</span>
        </div>
    </div>
</form>

<a asp-action="CreateClient" class="text-info">@Localizer["AddAccount"]</a>
<style>
    label{
        width: 150px;
    }
    .panel
    {
        margin: 15px;
    }
    span{
        color: red;
    }
</style>